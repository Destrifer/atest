---
import { Picture } from "astro:assets";

// Получаем путь из свойств компонента
const { path } = Astro.props;
---

<section class="wrap relative">
	<Picture
		src={path}
		formats={["avif", "webp"]}
		alt="Car on time"
		class="background"
	/>
	<slot />
</section>

<style>
	.background {
		position: absolute;
		z-index: 0;
		display: inline-block;
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: bottom center;
	}
	.wrap::before {
		content: "";
		position: absolute;
		inset: 0;
		background: black;
		opacity: 30%;
		z-index: 10;
	}
</style>
